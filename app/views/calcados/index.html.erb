<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-11">
    <h1>Calcados</h1>
  </div>
  <div class="col-1 text-right">
    <%= link_to 'New', new_calcado_path, class:"btn btn-primary" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipo calcado</th>
      <th>Descrição</th>
      <th>Marca</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calcados.each do |calcado| %>
      <tr>
        <td><%= calcado.tipo_calcado %></td>
        <td><%= calcado.descricao %></td>
        <td><%= calcado.marca %></td>
        
        <td><%= link_to 'Show', calcado %></td>
        <td><%= link_to 'Edit', edit_calcado_path(calcado) %></td>
        <td><%= link_to 'Destroy', calcado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>