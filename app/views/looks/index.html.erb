<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-11">
    <h1>Looks</h1>
  </div>
  <div class="col-1 text-right">
    <%= link_to 'New', new_look_path, class:"btn btn-primary" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Ocasiao</th>
      <th>Calcado</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @looks.each do |look| %>
      <tr>
        <td><%= look.descricao %></td>
        <td><%= look.ocasiao %></td>
        <td><%= look.calcado_id %></td>
        <td><%= look.ativo %></td>
        <td><%= link_to 'Show', look %></td>
        <td><%= link_to 'Edit', edit_look_path(look) %></td>
        <td><%= link_to 'Destroy', look, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>